<%= render 'shared/page_title', title: 'All Chefs' %>
<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <%= will_paginate %>
  </div>
</div>
<% @chefs.each do |chef| %>
  <div class="row">
    <div class="col-md-4 col-md-offset-4 center">
      <section class="chef_info center">
        <%= link_to gravatar_for(chef, size: 100), chef_path(chef) %>
        <h5>Chef name: <%= link_to chef.chefname.capitalize, chef_path(chef) %></h5>
        <h5><small>Last seen: <%= chef.last_login == nil ? 'New user' : "#{time_ago_in_words(chef.last_login)} ago" %></small></h5>
      </section>
    </div>
  </div>
  <hr>
<% end %>

<%= will_paginate %>